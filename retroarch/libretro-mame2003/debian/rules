# Turn on verbose mode, issues currently with compilation
export DH_VERBOSE=1

export CC=gcc-4.8
export CXX=g++-4.8

export DEB_CXXFLAGS_MAINT_STRIP=-g -O2
export DEB_CFLAGS_MAINT_STRIP=-g -O2

%:
	dh $@
